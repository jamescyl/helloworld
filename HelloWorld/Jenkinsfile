pipeline {
    agent any  // Or use a Docker agent with Maven/Java for consistency
    
    options {
        skipDefaultCheckout(true) // the repo is already mounted. No need Git checkout since you already have access to the repository files.
    }
    
    tools {
        maven 'Maven 3.9.12'  // Name of Maven installation in Jenkins Global Tools
        jdk   'OpenJDK-21'    // Name of JDK installation
    }
    stages {
       // stage('Checkout') {
       //     steps {
       //         checkout scm
       //     }
       // }
        stage('Build') {
            steps {
//                	sh 'mvn clean compile'
 
				// Work directly in the mounted directory
                dir('/repo/helloworld') {
                    sh '''
                        echo "Working in mounted directory:"
                        pwd
                        ls -la
                        
                        # Check for pom.xml
                        if [ -f "pom.xml" ]; then
                            echo "Building from mounted directory..."
                            mvn clean compile
                        else
                            echo "ERROR: No pom.xml found at:"
                            find . -name "pom.xml" 2>/dev/null
                            exit 1
                        fi
                    '''
				}
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'  //Publishes test results
                }
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
        }
    }
}