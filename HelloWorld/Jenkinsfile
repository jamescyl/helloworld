pipeline {
    agent any  // Or use a Docker agent with Maven/Java for consistency
    
    options {
        skipDefaultCheckout(true) // the repo is already mounted. No need Git checkout since you already have access to the repository files.
    }
    
    tools {
        maven 'Maven 3.9.12'  // Name of Maven installation in Jenkins Global Tools
        jdk   'OpenJDK-21'    // Name of JDK installation
    }
    stages {
       // stage('Checkout') {
       //     steps {
       //         checkout scm
       //     }
       // }
 		stage('Check Files') {
            steps {
                script {
                    // Check what's in the mounted directory
                    sh '''
                        echo "=== Checking mounted repository ==="
                        ls -la /repo/helloworld/
                        echo "=== Looking for pom.xml ==="
                        find /repo/helloworld -name "pom.xml" 2>/dev/null || echo "No pom.xml found"
                    '''
                }
            }
        }
        
        stage('Copy Files') {
            steps {
                script {
                    // Copy ALL files from mounted repo to workspace
                    sh '''
                        echo "Current workspace:"
                        pwd
                        ls -la
                        
                        echo "Copying files from mounted repo..."
                        cp -r /repo/helloworld/HelloWorld/pom.xml .
                        echo "Files copied:"
                        ls -la
                        
                        # Verify pom.xml exists
                        if [ -f "pom.xml" ]; then
                            echo "Found pom.xml!"
                            cat pom.xml | head -20
                        else
                            echo "ERROR: pom.xml not found!"
                            find . -name "*.xml" 2>/dev/null
                        fi
                    '''
                }
            }
               stage('Build') {
            steps {
               	sh 'mvn clean compile'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'  //Publishes test results
                }
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
        }
    }
}